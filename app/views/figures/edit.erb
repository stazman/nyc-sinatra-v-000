
<h2>Edit Record for:</h2><br>
<h1><%=@figure.name%></h1><br>

<form action="/figures/<%=@figure.id%>" method="POST">
    <input type="hidden" name="_method" value="patch">

    <label>Edit Person Name:</label><br>
    <input type="text" name="figure[name]" value="<%=@figure.name%>" id="figure_name">

    <label>Edit Titles:</label><br>
    <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkboxes" name="figure[title_ids]" value="<%=title.id %>" id="<%=title.name%>" <%='checked' if @figure.titles.include?(title) %>>
    <%# # ??? What is value here?     %>
    <% end %>

    <label>Add New Title:</label><br>
    <input type="text" name="figure[title]" id="new_title">

    <label>Edit Landmarks:</label><br>
    <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkboxes" name='figure[landmark_ids]' value="<%=landmark.id%>" id="<%=landmark.name%>" <%='checked' if @figure.landmarks.include?(landmark) %>>
    <%# # ??? What is value here?     %>
    <% end %>

    <label>Add New Landmark:</label><br>
    <input type="text" name="figure[landmark]" id="new_landmark">

    <input type="submit" id="Edit Figure">
</form> 

